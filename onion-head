<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Text Collage Generator</title>
  <style>
    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      font-family: sans-serif;
      display: flex;
      height: 100vh;
      background: white;
      color: black;
    }

    aside {
      width: 300px;
      padding: 20px;
      border-right: 1px solid #ccc;
      background: #f9f9f9;
    }

    main {
      flex: 1;
      padding: 20px;
      overflow-y: auto;
    }

    textarea {
      width: 100%;
      height: 200px;
      margin-bottom: 15px;
      font-size: 14px;
      padding: 10px;
      resize: vertical;
    }

    label {
      display: block;
      margin-top: 10px;
      font-weight: bold;
    }

    input[type="range"] {
      width: 100%;
    }

    #output {
      display: flex;
      flex-wrap: wrap;
      align-items: flex-start;
    }

    .word {
      margin: 4px;
      white-space: nowrap;
      user-select: none;
    }
  </style>
</head>
<body>

  <aside>
    <h2>Text Controls</h2>
    <textarea id="inputText">im over here Carmelizing my Onions rn i got Onions in my pan rn im cooking my shit, it's fragrant as fuck man im a Chef man</textarea>

    <label for="chaosRange">Chaos Level</label>
    <input type="range" id="chaosRange" min="1" max="5" value="3" />

    <label>
      <input type="checkbox" id="colorCheckbox" />
      Multicolor text
    </label>

    <button onclick="generate()">Generate</button>
  </aside>

  <main>
    <div id="output"></div>
  </main>

  <script>
    const fonts = [
      "Arial", "Courier New", "Comic Sans MS", "Georgia",
      "Impact", "Lucida Console", "Palatino Linotype", "Tahoma",
      "Times New Roman", "Trebuchet MS", "Verdana", "Garamond"
    ];

    function getRandomFont() {
      return fonts[Math.floor(Math.random() * fonts.length)];
    }

    function getRandomColor() {
      const letters = "0123456789ABCDEF";
      let color = "#";
      for (let i = 0; i < 6; i++) {
        color += letters[Math.floor(Math.random() * 16)];
      }
      return color;
    }

    function generate() {
      const input = document.getElementById('inputText').value;
      const output = document.getElementById('output');
      const chaos = parseInt(document.getElementById('chaosRange').value);
      const useColor = document.getElementById('colorCheckbox').checked;

      output.innerHTML = '';

      const words = input.split(' ');

      words.forEach(word => {
        const span = document.createElement('span');
        span.classList.add('word');
        span.textContent = word;

        // Chaos scale affects size, letter spacing, and boldness
        const minSize = 14 + chaos * 2;
        const maxSize = 24 + chaos * 6;

        span.style.fontFamily = getRandomFont();
        span.style.fontSize = `${Math.floor(Math.random() * (maxSize - minSize) + minSize)}px`;
        span.style.fontWeight = Math.random() > 0.5 ? 'bold' : 'normal';
        span.style.letterSpacing = `${Math.random() * chaos * 1.2}px`;
        span.style.transform = `rotate(${(Math.random() - 0.5) * chaos * 4}deg)`;

        if (useColor) {
          span.style.color = getRandomColor();
        } else {
          span.style.color = 'black';
        }

        output.appendChild(span);
      });
    }

    // Auto generate on load
    window.onload = generate;
  </script>

</body>
</html>
