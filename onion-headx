<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Text Collage Generator</title>
  <style>
    * {
      box-sizing: border-box;
    }

    html, body {
      margin: 0;
      padding: 0;
      height: 100%;
      font-family: sans-serif;
    }

    body {
      display: flex;
      flex-direction: row;
      background: white;
    }

    aside {
      width: 300px;
      padding: 20px;
      background: #f9f9f9;
      border-right: 1px solid #ddd;
    }

    main {
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
    }

    textarea {
      width: 100%;
      height: 120px;
      resize: vertical;
      padding: 8px;
      font-size: 14px;
    }

    label {
      display: block;
      margin-top: 12px;
      font-weight: bold;
    }

    input[type="range"],
    input[type="number"] {
      width: 100%;
      margin-top: 5px;
    }

    .collage-box {
      display: flex;
      flex-wrap: wrap;
      align-content: flex-start;
      overflow: auto;
      background: white;
      border: 2px solid black;
      padding: 16px;
    }

    .word {
      margin: 4px;
      white-space: nowrap;
      user-select: none;
    }
  </style>
</head>
<body>

  <aside>
    <h2>Collage Controls</h2>

    <label for="inputText">Your Text</label>
    <textarea id="inputText">im over here Carmelizing my Onions rn i got Onions in my pan rn im cooking my shit, it's fragrant as fuck man im a Chef man</textarea>

    <label for="chaosRange">Chaos Level</label>
    <input type="range" id="chaosRange" min="1" max="5" value="3" />

    <label>
      <input type="checkbox" id="colorCheckbox" />
      Multicolor text
    </label>

    <label>
      <input type="checkbox" id="fontChaosCheckbox" checked />
      Use many fonts
    </label>

    <label for="boxWidth">Box Width (px)</label>
    <input type="number" id="boxWidth" value="600" min="200" max="1200" />

    <label for="boxHeight">Box Height (px)</label>
    <input type="number" id="boxHeight" value="400" min="200" max="1000" />
  </aside>

  <main>
    <div id="output" class="collage-box"></div>
  </main>

  <script>
    const fullFontList = [
      "Arial", "Courier New", "Comic Sans MS", "Georgia",
      "Impact", "Lucida Console", "Palatino Linotype", "Tahoma",
      "Times New Roman", "Trebuchet MS", "Verdana", "Garamond"
    ];

    const limitedFonts = ["Helvetica", "Arial", "sans-serif"];

    const inputText = document.getElementById('inputText');
    const chaosRange = document.getElementById('chaosRange');
    const colorCheckbox = document.getElementById('colorCheckbox');
    const fontChaosCheckbox = document.getElementById('fontChaosCheckbox');
    const boxWidthInput = document.getElementById('boxWidth');
    const boxHeightInput = document.getElementById('boxHeight');
    const output = document.getElementById('output');

    function getRandomFont(useManyFonts) {
      const fontList = useManyFonts ? fullFontList : limitedFonts;
      return fontList[Math.floor(Math.random() * fontList.length)];
    }

    function getRandomColor() {
      const letters = "0123456789ABCDEF";
      let color = "#";
      for (let i = 0; i < 6; i++) {
        color += letters[Math.floor(Math.random() * 16)];
      }
      return color;
    }

    function maybeCapitalize(word) {
      if (word.match(/[A-Z]/)) return word; // already has caps
      if (Math.random() < 0.1) {
        return word.charAt(0).toUpperCase() + word.slice(1);
      }
      return word;
    }

    function updateCollage() {
      const chaos = parseInt(chaosRange.value);
      const useColor = colorCheckbox.checked;
      const useManyFonts = fontChaosCheckbox.checked;
      const width = parseInt(boxWidthInput.value);
      const height = parseInt(boxHeightInput.value);
      const words = inputText.value.trim().split(/\s+/);

      // Apply box dimensions
      output.style.width = `${width}px`;
      output.style.height = `${height}px`;

      output.innerHTML = '';

      words.forEach((word, index) => {
        const span = document.createElement('span');
        span.className = 'word';

        // Font size logic: shorter words are bigger
        const baseSize = 24;
        const adjustedSize = Math.max(12, baseSize + (5 - word.length));
        const randomSize = adjustedSize + Math.random() * chaos * 2;

        // Random rotation, small and rare
        const rotate = (Math.random() < 0.17) ? ((Math.random() - 0.5) * chaos * 2) : 0;

        // Stretching words a bit in x/y randomly
        const scaleX = 1 + (Math.random() - 0.5) * 0.3 * chaos;
        const scaleY = 1 + (Math.random() - 0.5) * 0.3 * chaos;

        span.textContent = maybeCapitalize(word);
        span.style.fontSize = `${randomSize}px`;
        span.style.fontFamily = getRandomFont(useManyFonts);
        span.style.fontWeight = Math.random() > 0.5 ? 'bold' : 'normal';
        span.style.transform = `rotate(${rotate.toFixed(2)}deg) scale(${scaleX.toFixed(2)}, ${scaleY.toFixed(2)})`;
        span.style.letterSpacing = `${(Math.random() - 0.5) * chaos}px`;
        span.style.lineHeight = '1';

        if (useColor) {
          span.style.color = getRandomColor();
        } else {
          span.style.color = 'black';
        }

        output.appendChild(span);
      });
    }

    // Attach all listeners for real-time updates
    [inputText, chaosRange, colorCheckbox, fontChaosCheckbox, boxWidthInput, boxHeightInput].forEach(el => {
      el.addEventListener('input', updateCollage);
    });

    window.onload = updateCollage;
  </script>

</body>
</html>
